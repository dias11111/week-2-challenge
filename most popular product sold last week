select Product.ProductName, Sales.ProductID, Count(*) as popular, Sales.DateOfSale From Product, Sales where Sales.ProductID=Product.ProductID and DateOfSale = '2020-09-16' group by DateOfSale, Sales.ProductID having count(*) = (select max(r) from (select count(*) as r, ProductID from Sales where DateOfSale = '2020-09-16' group by DateOfSale, ProductID) as mytable);
